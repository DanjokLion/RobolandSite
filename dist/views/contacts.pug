extends layout

block content
  h1.col-12.text-center.mt-5.mb-4 Контакты
  .container.minh
    .row.mb-3
      .col-4
        ul
          li Номер телефона: +74725324912
          li Адрес: Белгородская область, г. Старый Оскол, м-н Солнечный, 18
          li E-Mail: pedcolledge@bk.ru
          li График работы: Пн-Сб 07:00-18:00

      .col-8
        img.img-fluid(src="/images/map.png") 

  h2.col-12.text-center.mt-5.mb-4 Обратная связь
  .container.mb-5
    .row
      form.col-12#form-recall
        .form-group
          label(for="name") ФИО
            span.red *
          input.form-control#name(type="text" name='name' required)
        .form-group
          label(for="email") E-mail 
            span.red *
          input.form-control#email( type="email" name='email' required)
        .form-group
          label(for="phone") Номер телефона
            span.red *
          input.form-control#phone(type="tel" name='phone' required)
        .form-group
          label(for="message") Сообщение
          textarea.form-control#message(name="message" rows="8" cols="80") 
        .form-group.form-check
          input.form-check-input#yes(type="checkbox"  required)
          label.form-check-label(for="yes") Я даю своё согласие на обработку своих персональных данных
          input#type(type="hidden" name="type" value="Обратная связь")
        button.btn.btn-primary#btn-submit(type="submit") Отправить
